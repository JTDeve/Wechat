.list-one-poster{
  width: 180rpx;
  height: 180rpx;
  border-radius: 10rpx;
  margin-right:50rpx;
}

.userImage{
  width: 80rpx;
  height: 80rpx;
  border-radius: 10rpx;
  margin-right:50rpx;
}

.param_d{
