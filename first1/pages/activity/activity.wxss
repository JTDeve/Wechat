/* pages/activity/activity.wxss */
.container{
  height: 100%;
  overflow: hidden;
}
.list{
  position: absolute;
  top: 80rpx;
}

.list-one{
  height: 220rpx;
  display: flex;
  padding:10rpx;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;
  border-bottom:4rpx solid rgba(190, 180, 178, 0.6);
}

.list-one2{
  height: 100rpx;
  display: flex;
  padding:10rpx;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: flex-start;
  align-items: center;
  /* border-bottom:4rpx solid rgba(54, 43, 41, 0.6); */
}

.list-one-choose{
  background-color: rgba(54, 43, 41, 0.6);
}

.list-index{
  display: block;
  width: 60rpx;
  height: 60rpx;
  background-color:#7A7A7A;
  text-align: center;
  border-radius: 60rpx;
  line-height: 60rpx;
  margin-right: 20rpx;
}

.bg{
  height: 100%;
  width: 100%;
}
.bg image{
  height: 100%;
  width: 100%;
  filter: blur(50rpx);
}
